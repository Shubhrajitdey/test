<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/purplebg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Create Account"
        android:textColor="#f5f2f2"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/signup"
        android:drawableLeft="@drawable/ic_person_black_userid"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="FullName"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <EditText
        android:id="@+id/userEmailId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/signup"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <EditText
        android:id="@+id/mobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:background="@drawable/signup"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="MobileNumber"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="18sp"
        android:maxLength="10"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileNumber"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signup"
        android:drawableLeft="@drawable/ic_lock_outline_lock"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Passoword"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="185dp"
        android:background="@drawable/signup"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="18sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <CheckBox
        android:id="@+id/terms_conditions"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:padding="6dp"
        android:paddingLeft="5dp"
        android:text="By checking this you confirmed all the details are correct "
        android:textColor="#ffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/background_signup"
        android:padding="3dp"
        android:text="Sign Up"
        android:textColor="#92601f"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>